{
  "manifest_version": 2,
  "name": "Image Text Extractor",
  "version": "1.0",
  "description": "Extract text from images",
  "permissions": ["activeTab", "storage", "http://your-python-api-url/"],
  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
